    "# adventure_game.py\n",
    "# This program is a text-based adventure game where the player searches for a hidden treasure\n",
    "\n",
    "def start_game():\n",
    "    print(\"\\nğŸ´â€â˜ ï¸ Welcome to the Adventure Quest ğŸ´â€â˜ ï¸\")\n",
    "    name = input(\"Enter your name, explorer: \")\n",
    "    print(f\"\\nHello {name}! Your mission is to find the legendary treasure.\\n\")\n",
    "\n",
    "    while True:\n",
    "        print(\"You are at the start of your journey. Choose a path:\")\n",
    "        print(\"1. Enter the dark forest\")\n",
    "        print(\"2. Enter the mysterious cave\")\n",
    "\n",
    "        choice = input(\"Enter 1 or 2: \")\n",
    "\n",
    "        if choice == \"1\":\n",
    "            game_over = forest_path()\n",
    "        elif choice == \"2\":\n",
    "            game_over = cave_path()\n",
    "        else:\n",
    "            print(\"Invalid choice. Please try again.\\n\")\n",
    "            continue\n",
    "\n",
    "        if game_over:\n",
    "            break\n",
    "\n",
    "    restart_game()\n",
    "\n",
    "\n",
    "def forest_path():\n",
    "    print(\"\\nğŸŒ² You walk into the dark forest.\")\n",
    "    print(\"You see a flowing river and a tall tree.\")\n",
    "    print(\"1. Follow the river\")\n",
    "    print(\"2. Climb the tree\")\n",
    "\n",
    "    choice = input(\"Enter 1 or 2: \")\n",
    "\n",
    "    if choice == \"1\":\n",
    "        print(\"\\nYou follow the river and find a hidden bridge.\")\n",
    "        print(\"Crossing it, you discover the TREASURE! ğŸ†\")\n",
    "        print(\"ğŸ‰ You WIN the game!\")\n",
    "        return True\n",
    "    elif choice == \"2\":\n",
    "        print(\"\\nYou slip while climbing and fall.\")\n",
    "        print(\"âŒ You are injured and lose the quest.\")\n",
    "        return True\n",
    "    else:\n",
    "        print(\"Wrong choice. Returning to start.\\n\")\n",
    "        return False\n",
    "\n",
    "\n",
    "def cave_path():\n",
    "    print(\"\\nğŸ•³ï¸ You enter the mysterious cave.\")\n",
    "    print(\"It is very dark inside.\")\n",
    "    print(\"1. Light a torch\")\n",
    "    print(\"2. Move forward in the dark\")\n",
    "\n",
    "    choice = input(\"Enter 1 or 2: \")\n",
    "\n",
    "    if choice == \"1\":\n",
    "        print(\"\\nThe torch lights the cave.\")\n",
    "        print(\"You avoid traps and find the TREASURE! ğŸ†\")\n",
    "        print(\"ğŸ‰ You WIN the game!\")\n",
    "        return True\n",
    "    elif choice == \"2\":\n",
    "        print(\"\\nYou fall into a hidden pit.\")\n",
    "        print(\"âŒ Game Over. You lost the adventure.\")\n",
    "        return True\n",
    "    else:\n",
    "        print(\"Wrong choice. Returning to start.\\n\")\n",
    "        return False\n",
    "\n",
    "\n",
    "def restart_game():\n",
    "    choice = input(\"\\nDo you want to play again? (yes/no): \").lower()\n",
    "    if choice == \"yes\":\n",
    "        start_game()\n",
    "    else:\n",
    "        print(\"\\nThank you for playing! Goodbye ğŸ‘‹\")\n",
    "\n",
    "\n",
    "# Start the game\n",
    "start_game()\n"
